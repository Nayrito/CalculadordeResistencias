<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageButton
            android:layout_width="362dp"
            android:layout_height="183dp" app:srcCompat="@drawable/resistencia"
            android:id="@+id/btimage" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintVertical_bias="0.105"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="146dp"
            android:layout_height="200dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btimage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/linearLayout">
        <Spinner
                android:layout_width="match_parent"
                android:entries="@array/banda1"
                android:textAlignment="center"
                android:layout_height="match_parent" android:id="@+id/spB1" android:layout_weight="1"/>
        <Spinner
                android:layout_width="match_parent"
                android:entries="@array/banda2"
                android:textAlignment="center"
                android:layout_height="match_parent" android:id="@+id/spB2" android:layout_weight="1"/>
        <Spinner
                android:layout_width="match_parent"
                android:entries="@array/banda3"
                android:textAlignment="center"
                android:layout_height="match_parent" android:id="@+id/spB3" android:layout_weight="1"/>
        <Spinner
                android:layout_width="match_parent"
                android:entries="@array/banda4"
                android:textAlignment="center"
                android:layout_height="match_parent" android:id="@+id/spB4" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="369dp"
            android:layout_height="52dp"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    >
        <Button
                android:text="@string/calcular"
                android:background="@drawable/bt_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btCalculo" android:layout_weight="1"/>
        <TextView
                android:hint="@string/_0"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/tvShow" android:layout_weight="1"/>
    </LinearLayout>
    <ImageButton
            android:layout_width="16dp"
            android:layout_height="79dp" app:srcCompat="@drawable/negro"
            android:id="@+id/ibtBanda1" app:layout_constraintStart_toStartOf="@+id/btimage"
            android:layout_marginStart="116dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="@+id/btimage"/>
    <ImageButton
            android:layout_width="18dp"
            android:layout_height="64dp" app:srcCompat="@drawable/negro"
            android:id="@+id/ibtBanda2" app:layout_constraintStart_toStartOf="@+id/btimage"
            android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="@+id/btimage"
            android:layout_marginStart="152dp"/>
    <ImageButton
            android:layout_width="16dp"
            android:layout_height="65dp" app:srcCompat="@drawable/negro"
            android:id="@+id/ibtBanda3" app:layout_constraintStart_toStartOf="@+id/btimage"
            android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="@+id/btimage"
            android:layout_marginStart="192dp"/>
    <ImageButton
            android:layout_width="20dp"
            android:layout_height="80dp" app:srcCompat="@drawable/negro"
            android:id="@+id/ibtBanda4" app:layout_constraintEnd_toEndOf="@+id/btimage" android:layout_marginEnd="112dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="@+id/btimage"/>
</androidx.constraintlayout.widget.ConstraintLayout>